      </mj-column>
    </mj-section>

    <!-- Order info row -->
    <mj-section background-color="#6098ef" padding="18px 40px">
      <mj-column width="33%">
        <mj-text align="left" color="#fff" font-family="Arial, sans-serif" font-size="13px" font-weight="700" padding="0 0 8px 0">
          Order Number
        </mj-text>
        <mj-text align="left" color="#fff" font-family="Arial, sans-serif" font-size="13px" padding="0" letter-spacing="0">
          [[OrderNumber]]
        </mj-text>
      </mj-column>
      <mj-column width="33%">
        <mj-text align="center" color="#fff" font-family="Arial, sans-serif" font-size="13px" font-weight="700" padding="0 0 8px 0">
          Order Date
        </mj-text>
        <mj-text align="center" color="#fff" font-family="Arial, sans-serif" font-size="13px" padding="0" letter-spacing="0">
          [[OrderDate]]
        </mj-text>
      </mj-column>
      <mj-column width="33%">
        <mj-text align="right" color="#fff" font-family="Arial, sans-serif" font-size="13px" font-weight="700" padding="0 0 8px 0">
          Total Price
        </mj-text>
        <mj-text align="right" color="#fff" font-family="Arial, sans-serif" font-size="13px" padding="0" letter-spacing="0">
          [[TotalPrice]]
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Buttons -->
